{
  "name": "corestm32",
  "title": "THE CORE STM32",
  "description": "The STM32 family of 32-bit Flash MCUs based on the ARM Cortex-M processor is designed to offer new degrees of freedom to MCU users. It offers a 32-bit product range that combines very high performance, real-time capabilities, digital signal processing, and low-power, low-voltage operation, while maintaining full integration and ease of development.",
  "url": "http://www.st.com/web/en/catalog/mmc/FM141/SC1169?sc=stm32",
  "homepage": "http://platformio.org/platforms/",
  "license": "Apache-2.0",
  "engines": {
    "platformio": "^3.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Redferne/platform-ststm32.git"
  },
  "version": "4.3.1",
  "packageRepositories": [
    "https://dl.bintray.com/platformio/dl-packages/manifest.json",
    "http://dl.platformio.org/packages/manifest.json",
    {
      "framework-arduinocorestm32": [
        {
          "type": "git",
          "url": "https://github.com/Redferne/Arduino_Core_STM32.git",
          "system": "*"
        }
      ],
      "framework-cmsis5": [
        {
          "url": "https://github.com/stm32duino/BoardManagerFiles/raw/master/STM32/tools/CMSIS-5.3.0.tar.bz2",
          "system": "*",
          "version": "5.3.0"
        }
      ]
    }
  ],
  "frameworks": {
    "mbed": {
      "package": "framework-mbed",
      "script": "builder/frameworks/mbed/mbed.py"
    },
    "cmsis": {
      "package": "framework-cmsis",
      "script": "builder/frameworks/cmsis.py"
    },
    "spl": {
      "package": "framework-spl",
      "script": "builder/frameworks/spl.py"
    },
    "libopencm3": {
      "package": "framework-libopencm3",
      "script": "builder/frameworks/libopencm3/libopencm3.py"
    },
    "arduino": {
      "package": "framework-arduinocorestm32",
      "script": "builder/frameworks/arduino/stm32duino.py"
    },
    "stm32cube": {
      "package": "framework-stm32cube",
      "script": "builder/frameworks/stm32cube.py"
    }
  },
  "packages": {
    "toolchain-gccarmnoneeabi": {
      "type": "toolchain",
      "version": ">=1.60301.0"
    },
    "framework-mbed": {
      "type": "framework",
      "optional": false,
      "version": "~4.50806.0"
    },
    "framework-cmsis": {
      "type": "framework",
      "optional": false,
      "version": "~1.40300.0"
    },
    "framework-spl": {
      "type": "framework",
      "optional": true,
      "version": "~2.10201.0"
    },
    "framework-libopencm3": {
      "type": "framework",
      "optional": true,
      "version": "~1.1.0"
    },
    "framework-arduinocorestm32": {
      "type": "framework",
      "optional": false,
      "version": "~1.2.0"
    },
    "framework-arduinostm32mxchip": {
      "type": "framework",
      "optional": true,
      "version": "~1.3.0"
    },
    "framework-stm32cube": {
      "type": "framework",
      "optional": true,
      "version": "~1.2.0"
    },
    "tool-stlink": {
      "type": "uploader",
      "optional": true,
      "version": "~1.10400.0"
    },
    "tool-stm32duino": {
      "type": "uploader",
      "optional": true,
      "version": "~1.0.0"
    },
    "tool-openocd": {
      "type": "uploader",
      "optional": true,
      "version": "~1.1000.0"
    }
  }
}
